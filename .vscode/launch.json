  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask (0.11.x or later)",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",
        "SQL_HOST": "contososupermarket.mysql.database.azure.com",
        "SQL_USERNAME": "aksiot",
        "SQL_PASSWORD": "Test123!",
        "SQL_DATABASE": "contososupermarket",
        "NEW_LAYOUT" : "True"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload"
      ]
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "env": {
        "FLASK_ENV": "development"
      }
    },
    {
      "name": "Python: Attach",
      "type": "python",
      "request": "attach",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "port": 3000,
      "secret": "my_secret",
      "host": "localhost"
    }
  ]
}